# ============================================================================
# CRITICAL: Do not commit this file with real secrets!
# Copy to .env and update with your actual values
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
PROJECT_NAME=Automation Platform API
DEBUG=false

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
POSTGRES_DB=automation_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-postgres-password-change-me
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your-strong-postgres-password-change-me@localhost:5432/automation_platform

# WHY: For Docker, use 'postgres' as host instead of 'localhost'
# DATABASE_URL=postgresql://postgres:your-strong-postgres-password-change-me@postgres:5432/automation_platform

# ============================================================================
# Redis (Sessions & Queues)
# ============================================================================
REDIS_PASSWORD=your-redis-password-change-me
REDIS_PORT=6379
REDIS_URL=redis://:your-redis-password-change-me@localhost:6379/0

# WHY: For Docker, use 'redis' as host
# REDIS_URL=redis://:your-redis-password-change-me@redis:6379/0

# ============================================================================
# Security & Authentication
# ============================================================================
# WHY: JWT_SECRET must be at least 32 characters for security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars-REQUIRED
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# WHY: ENCRYPTION_KEY is used for Fernet encryption of sensitive data (n8n API keys)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-for-encrypting-sensitive-data-REQUIRED

# ============================================================================
# URLs
# ============================================================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ============================================================================
# Domains (for Docker Compose + Traefik)
# ============================================================================
# WHY: Used by Traefik for routing and SSL certificate generation
DOMAIN=localhost
API_DOMAIN=api.localhost
N8N_DOMAIN=n8n.localhost

# ============================================================================
# Traefik (Reverse Proxy)
# ============================================================================
# WHY: Email address for Let's Encrypt SSL certificate notifications
TRAEFIK_ACME_EMAIL=admin@yourdomain.com
TRAEFIK_LOG_LEVEL=INFO

# ============================================================================
# Stripe (Payment Processing)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================================================
# Email Service
# ============================================================================
# Choose one email provider
RESEND_API_KEY=your-resend-api-key
# or POSTMARK_TOKEN=your-postmark-token

# ============================================================================
# S3 Storage (PDFs, Attachments)
# ============================================================================
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=automation-platform-files
S3_REGION=us-east-1

# ============================================================================
# n8n (Workflow Automation)
# ============================================================================
# WHY: n8n requires basic auth for admin interface access
N8N_USER=admin
N8N_PASSWORD=your-strong-n8n-password-change-me-REQUIRED
N8N_DB_NAME=n8n

# WHY: API connection from backend to n8n
N8N_DEFAULT_BASE_URL=http://localhost:5678
# For Docker: N8N_DEFAULT_BASE_URL=http://n8n:5678
N8N_DEFAULT_API_KEY=your-n8n-api-key

# ============================================================================
# Observability (Sentry)
# ============================================================================
SENTRY_DSN=your-sentry-dsn

# ============================================================================
# Frontend (Next.js)
# ============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
